<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="200dp"
	android:layout_height="wrap_content"
	android:background="@android:color/transparent"
	android:orientation="vertical"
	android:paddingStart="10dp"
	app:cardBackgroundColor="#ffffff"
	app:cardCornerRadius="5dp"
	app:cardElevation="10dp"
	app:cardMaxElevation="10dp"
	android:paddingEnd="10dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				android:id="@+id/resendView"
				android:background="@drawable/bg_bottom_gray"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:clickable="true"
				android:focusable="true"
				android:gravity="center_vertical"
				android:paddingStart="12dp"
				android:paddingTop="10dp"
				android:paddingEnd="12dp"
				android:paddingBottom="10dp"
				android:drawableStart="@drawable/send_small"
				android:drawablePadding="14dp"
				android:text="Отправить снова"
				android:textAppearance="?android:textAppearanceMedium"
				android:textColor="@android:color/black"
				android:textSize="16sp" />

			<TextView
				android:id="@+id/copyView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:clickable="true"
				android:focusable="true"
				android:gravity="center_vertical"
				android:paddingStart="12dp"
				android:paddingTop="10dp"
				android:paddingEnd="12dp"
				android:background="@drawable/bg_bottom_gray"
				android:paddingBottom="10dp"
				android:text="Скопировать"
				android:drawableStart="@drawable/copy"
				android:drawablePadding="14dp"
				android:textAppearance="?android:textAppearanceMedium"
				android:textColor="@android:color/black"
				android:textSize="16sp" />

			<TextView
				android:id="@+id/quoteView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:clickable="true"
				android:focusable="true"
				android:drawableStart="@drawable/reply"
				android:drawablePadding="14dp"
				android:background="@drawable/bg_bottom_gray"
				android:gravity="center_vertical"
				android:paddingStart="12dp"
				android:paddingTop="10dp"
				android:paddingEnd="12dp"
				android:paddingBottom="10dp"
				android:text="Цитировать"
				android:textAppearance="?android:textAppearanceMedium"
				android:textColor="@android:color/black"
				android:textSize="16sp" />
		</LinearLayout>
</com.google.android.material.card.MaterialCardView>